---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05 from "@images/post-05.png";
---

<MainLayout title="Images">
    <h1 class="text-5xl text-white">Images</h1>

    <h1>High</h1>
    <Image 
        src={post05}
        quality="high"
        width="250" 
        height="250"
        alt="Image from Astro"
    />
    <h1>Formatos</h1>
    <Image 
        src={post05}
        format="avif"
        width="250" 
        height="250"
        alt="Image from Astro"
    />
    <h1>Picture</h1>
    <!-- formats={["webp","avif","jpeg"]}
        widths={[240, 540, 720, post05.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05.width}px`} -->
    <Picture 
        src={post05}
        alt="Image from Astro"
        width={post05.width/2}
        densities={[1.5, 2]}
    />
    <div style={{
        height: '3000px',
    }}>
    </div>
    <img 
        loading="lazy"
        src="/assets/images/post-05.png" 
        width="250" 
        height="250"
    />
</MainLayout>
